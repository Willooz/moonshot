<%= form_tag highfive_create_path(@shot) do %>
  <div class="page-title">
    <h1>Select badges for <strong><%= @receiver.name %></strong></h1>
    <%= submit_tag "Give badges", class: "btn btn-right btn-primary" %>
    <%= link_to "Cancel", shot_path(@shot), class: "btn btn-right btn-default" %>
  </div>


  <div class="page-content">
    <%= hidden_field_tag 'receiver_id', @receiver.id %>
    <% @badges.each do |badge| %>
      <div class="square-card">
        <%= render "badge", badge: badge %>
      </div>
    <% end %>
  </div>
<% end %>

<div class="page-foot">
  <%= link_to "Back to top", "#title", class: "btn btn-default btn-back" %>
</div>