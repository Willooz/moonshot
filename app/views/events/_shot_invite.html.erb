<div class="list-card linked-card">
  <div class="card-left accepted-invite">
    <%= image_tag shot_invite.invitee.user.picture, size: "100x100", alt: "Profile pic", class: "img-circle" %>
  </div>
  <div class="card-middle">
    <h5>
      <%= "#{shot_invite.invitee.name} joined the team working on #{shot_invite.shot.title}"%>
    </h5>
    <h5>
      <%= "invited by #{shot_invite.inviter.name}."%>
    </h5>
    <p>

    </p>
  </div>
  <div class="card-right">
    <%= image_tag(shot_invite.inviter.user.picture.url, size: "50x50", class: "img-circle") %>
  </div>
</div>