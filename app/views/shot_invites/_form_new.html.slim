= simple_form_for(@shot_invite, method: :post, url: account_shot_shot_invites_path) do |f|
  = f.error_notification
  = f.input :invitee, collection: @profiles, value_method: :id, label: "Invite a co-worker", include_blank: false, label_method: :name
  = f.button :submit, t('.sign_up', default: "Send Invite"), class: "btn btn-primary"
