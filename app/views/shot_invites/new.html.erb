<%= form_tag shot_invite_create_many_path(@shot) do %>
  <div class="page-title">
    <h1>Invite to <strong><%= @shot.title %></strong></h1>
    <%= submit_tag "Invite", class: "btn btn-right btn-primary" %>
    <%= link_to "Cancel", shot_path(@shot), class: "btn btn-right btn-default" %>
  </div>


  <div class="page-content">
    <%= hidden_field_tag 'inviter_id', @inviter.id %>
    <% @profiles.each do |profile| %>
      <div class="square-card">
        <%= render "profile", profile: profile %>
      </div>
    <% end %>
  </div>
<% end %>

<div class="page-foot">
  <%= link_to "Back to top", "#title", class: "btn btn-default" %>
</div>