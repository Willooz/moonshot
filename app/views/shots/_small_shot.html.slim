.list-card
  .card-left
    = image_tag("http://placehold.it/100x100", class: "img-circle")
  .card-center
    h4 = link_to shot.title, shot_path(shot)
    p
      i class="fa fa-bullseye"
      = "#{shot.percentage_done} % done"
      i class="fa fa-calendar"
      = "Deadline #{shot.deadline}"
  .card-right



