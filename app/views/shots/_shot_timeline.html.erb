<% events.each do |event| %>
  <% case event.trigger_type %>
    <% when "Highfive" %>
      <%= render partial: 'events/highfive', locals: { highfive: event.trigger } %>
    <% when "ShotInvite" %>
      <%= render partial: 'events/shot_invite', locals: { shot_invite: event.trigger } %>
    <% when "Update" %>
      <%= render partial: 'events/update', locals: { update: event.trigger } %>
    <% when "Shot" %>
      <%= render partial: 'events/shot_creation', locals: { shot: event.trigger } %>
  <% end %>
<% end %>