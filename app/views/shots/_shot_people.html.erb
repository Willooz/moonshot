<div class="list-card">

  <div class="card-left">
    <%= link_to image_tag(profile.user.picture(:thumb), alt: "Profile", class: "img-circle"), people_show_path(profile) %>
  </div>

  <div class="card-middle">
    <% profile.badges.distinct.each do |badge| %>
      <%= image_tag(badge.picture, size: "50x50", alt: "Badge", class: "img-circle")  %>
    <% end %>
  </div>

  <div class="card-right">
    <% unless current_profile == profile %>
      <%= link_to "Give badges", badges_path(@shot, profile.id), class: "btn btn-right btn-primary" %>
    <% end %>
  </div>

</div>